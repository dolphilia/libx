{
  // リポジトリ全体のデフォルト言語設定
  "defaultLang": "en",
  // 各アプリが project.config.jsonc で baseUrl を未指定の場合のプレフィックス
  "baseUrlPrefix": "/docs",
  // 公開サイトのデフォルト URL（apps の astro.config で使用）
  "siteUrl": "https://libx.dev",
  // 多言語対応のグローバル既定値
  "language": {
    "supported": ["en"],
    "default": "en",
    "displayNames": {
      "en": "English"
    }
  }
}
